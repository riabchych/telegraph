<Window x:Class="Telegraph.TelegramWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telegraph"
        mc:Ignorable="d"
        Title="Телеграма" Height="250" Width="335" MinWidth="560" MinHeight="440">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37" />
            <RowDefinition Height="37" />
            <RowDefinition Height="37" />
            <RowDefinition  />
            <RowDefinition Height="37" />
            <RowDefinition Height="37" />
            <RowDefinition Height="38" />
            <RowDefinition Height="37" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Терміновість" />
        <TextBlock Text="Номер" Grid.Row="1" />
        <TextBlock Text="Кому" Grid.Row="2" />
        <TextBlock Text="Текст" Grid.Row="3" />
        <TextBlock Text="Підписний" Grid.Row="4" />
        <TextBlock Text="Дата" Grid.Row="5" />
        <TextBlock Text="Експедитор" Grid.Row="6" />

        <RadioButton Grid.Column="1" Margin="10,10,0,8" GroupName="UrgencyGroup" Content="Проста"  HorizontalAlignment="Left" Width="70"/>
        <RadioButton Grid.Column="1" Margin="85,10,0,8" GroupName="UrgencyGroup" Content="Термінова" HorizontalAlignment="Left" Width="80"/>
        <TextBox Text="{Binding Number}" Grid.Column="1" Grid.Row="1"/>
        <TextBox Text="{Binding To}" Grid.Column="1" Grid.Row="2" />
        <TextBox Text="{Binding Text}" Grid.Column="1" Grid.Row="3" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" />
        <TextBox Text="{Binding Subnum}" Grid.Column="1" Grid.Row="4" />
        <TextBox Text="{Binding Date}" Grid.Column="1" Grid.Row="5" />
        <TextBox Text="{Binding Dispatcher}" Grid.Column="1" Grid.Row="6" />

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="7" Grid.Column="1" Width="140" Margin="10,0,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="5">OK</Button>
            <Button IsCancel="True" MinWidth="60" Margin="5">Скасувати</Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="7" Grid.Column="1" Width="175" Margin="0,0,8,0">
            <Button MinWidth="60" Margin="5">Друк</Button>
            <Button MinWidth="60" Margin="5">Відкрити у Word</Button>
        </StackPanel>
    </Grid>
</Window>
